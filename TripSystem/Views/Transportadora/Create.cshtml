@section Styles {
    <link href="@Url.Content("~/Content/Intranet.css")" rel="stylesheet" type="text/css" />
}

@model TripSystem.Models.Transportadora

@{
    ViewBag.Title = "Create";
}

<h3 class="page_title">Editar Transportadora</h3>
<p style="padding:30px" />

<div class="form">
