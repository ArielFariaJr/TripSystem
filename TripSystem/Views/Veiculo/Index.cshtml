@section Styles {
    <link href="@Url.Content("~/Content/Intranet.css")" rel="stylesheet" type="text/css" />
}

@model IEnumerable<TripSystem.Models.Veiculo>

@{
    ViewBag.Title = "Index";
}

<h3 class="page_title">Veículos</h3>
<p class="create-new">
    @Html.ActionLink("Create New", "Create")
</p>

<p style="padding:30px" />
<table class="grid">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Transportadora.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarcaCarro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModeloCarro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QntAssentos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorDiaria)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Transportadora.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarcaCarro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModeloCarro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QntAssentos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDiaria)
            </td>
            <td width="15%">

                @Html.ActionLink(" ", "Edit", new { id = item.VeiculoId }, new { @class = "edit" })
                @Html.ActionLink(" ", "Delete", new { id = item.VeiculoId }, new { @class = "delete" })

            </td>
        </tr>
    }
</table>
