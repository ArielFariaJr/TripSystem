@section Styles {
    <link href="@Url.Content("~/Content/Intranet.css")" rel="stylesheet" type="text/css" />
}
@Scripts.Render("~/Scripts/intranet.js")

@model IEnumerable<TripSystem.Models.Excurcao>

@{
    ViewBag.Title = "Index";
}

<h3 class="page_title">Excurções</h3>

<p class="create-new">
    @Html.ActionLink("Create New", "Create")
</p>

<p style="padding:30px" />
<table class="grid">
    <tr>
        <th>Categoria</th>
        <th width="20%">
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPartida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataRetorno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroPessoas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPartida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRetorno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroPessoas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td width="18%">
                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "details" })
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "edit" })
                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "delete" })
            </td>
        </tr>
    }
</table>

<div id="display-detail"></div>
